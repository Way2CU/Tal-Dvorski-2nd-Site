<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header>
				<nav>
					<!-- Phone svg icon -->
					<a
						href="'tel:'.urlencode(Language::get_Text('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:svg file="site_sprite.svg" symbol="phone"/>
					</a>

					<!-- Main logo icon -->
					<cms:svg file="site_sprite.svg" symbol="logo" class="logo" />

					<!-- Menu icon -->
					<a href="" class="menu">
						<cms:svg file="site_sprite.svg" symbol="menu"/>
					</a>
					<!-- drop down menu -->
					<div class="drop_down">

						<!-- link landing page -->
						<a href="#">
							<cms:text constant="landing_page" />
						</a>
						<!-- link home page page -->
						<a href="#">
							<cms:text constant="home_page" />
						</a>
						<!-- link about us page -->
						<a href="#">
							<cms:text constant="about_us" />
						</a>
						<!-- link gallery page -->
						<a href="#">
							<cms:text constant="gallery" />
						</a>
						<!-- link articles page -->
						<a href="#">
							<cms:text constant="articles" />
						</a>
						<!-- link contact page -->
						<a href="#">
							<cms:text constant="contact_page" />
						</a>

					</div>

				</nav>
			</header>

			<!-- main section with form -->
			<section class="discount">
				<h1><cms:text constant="main_header" /></h1>

				<!-- Discount image -->
				<img
					src="_BASEURL.'/site/images/discount.png'"
					alt="70% discount"
					cms:eval="src"
					/>

				<!-- Form -->
				<div id="form">
				<!-- Form Constant -->
				<h3><cms:text constant="form_constant" /></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>
				</div>

			</section>
		</body>
	</html>
</document>
